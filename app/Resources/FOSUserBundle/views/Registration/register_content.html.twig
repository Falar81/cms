{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="form-horizontal">
    <fieldset>
        {#{{ form_widget(form) }}#}
        <legend>Registrazione</legend>
        <div class="form-group">
            {{ form_label(form.username,label|default(null), { 'label_attr': {'class': 'col-lg-4 control-label'} }) }}
            <div class="col-lg-8">
                {{ form_widget(form.username, { 'attr': {'class': 'form-control', 'placeholder': 'form.username'|trans } }) }}
                {{ form_errors(form.username) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.email,label|default(null), { 'label_attr': {'class': 'col-lg-4 control-label'} }) }}
            <div class="col-lg-8">
                {{ form_widget(form.email, { 'attr': {'class': 'form-control', 'placeholder': 'form.email'|trans } }) }}
                {{ form_errors(form.email) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.plainPassword.first,label|default(null), { 'label_attr': {'class': 'col-lg-4 control-label'} }) }}
            <div class="col-lg-8">
                {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control', 'placeholder': 'form.plainPassword.first'|trans } }) }}
                {{ form_errors(form.plainPassword.first) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.plainPassword.second,label|default(null), { 'label_attr': {'class': 'col-lg-4 control-label'} }) }}
            <div class="col-lg-8">
                {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control', 'placeholder': 'form.plainPassword.second'|trans } }) }}
                {{ form_errors(form.plainPassword.second) }}
            </div>
        </div>
        {{ form_rest(form) }}
        <div>
            <input type="submit" class="btn btn-primary btn-lg" value="{{ 'registration.submit'|trans }}" />
        </div>
    </fieldset>

</form>
