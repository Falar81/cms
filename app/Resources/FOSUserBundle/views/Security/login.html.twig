{% extends "::base.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block centralSide %}

    <div>
        {% if error %}
            <div class="alert alert-dismissable alert-danger">
                <button type="button" class="close" data-dismiss="alert"><i class="fa fa-times"></i></button>
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}
        <div class="row">
            <div class="col-md-6">
                <div class="jumbotron">
                    <h3>Oppure..</h3>
                    <p><a href="{{ path('fos_user_registration_register') }}" class="btn btn-primary btn-lg btn-block">REGISTRATI</a></p>
                </div>
            </div>
            <div class="col-md-6 ">
                <form action="{{ path("fos_user_security_check") }}" method="post" class="form-horizontal">
                    <fieldset>
                        <legend>Accedi:</legend>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                        <div class="form-group">
                            <label for="username" class="col-lg-4 control-label">{{ 'security.login.username'|trans }}</label>
                            <div class="col-lg-6">
                                <input type="text" class="form-control" placeholder="Username" id="username" name="_username" value="{{ last_username }}" required="required" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="password" class="col-lg-4 control-label">{{ 'security.login.password'|trans }}</label>
                            <div class="col-lg-6">
                                <input type="password" class="form-control" placeholder="Password" id="password" name="_password" required="required" />
                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox"  name="_remember_me" value="on" /> {{ 'security.login.remember_me'|trans }}
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-lg-6 col-lg-offset-4 ">
                                <input type="submit" class="btn btn-primary btn-lg btn-block" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
{% endblock %}