{% extends "::base.html.twig" %}
{% block stylesheets %}
    {{ parent() }}
    <link href="//cdn.datatables.net/plug-ins/3cfcc339e89/integration/bootstrap/3/dataTables.bootstrap.css" rel="stylesheet">
{% endblock %}
{% block title %}Elenco delle categorie prodotti{% endblock %}

{% block centralSide %}
    <ol class="breadcrumb">
        <li><a href="{{ path('_welcome') }}">Home</a></li>
        <li><a>Categorie Prodotti</a></li>
    </ol>
    <div class="page-header">
        <a href="{{ path('apw_blackbull_categories_createcategory') }}" class="btn btn-success btn-lg"><i class="fa fa-plus-circle fa-fw"></i> Aggiungi Categoria</a>
        <a href="#" class="btn btn-primary btn-lg"><i class="fa fa-plus-circle fa-fw"></i> Aggiungi Prodotto</a>
    </div>

    <!-- Table -->
    <table id="categoryTbl" class="table table-striped table-hover" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>Categorie/Prodotti</th>
                <th>Stato</th>
                <th>Azione</th>
            </tr>
        </thead>
        <tbody>
        {#{{ dump(categories) }}#}
            {% for category in categories %}
                {% for categoryDesc in category.getCategoryDescription %}
                    <tr>
                        <td class="col-md-10">
                                <i class="fa fa-folder-o"></i><a href="{{ path('apw_blackbull_categories_showcategory',{'id' : category.getId}) }}"> {{ categoryDesc.categoriesName }}</a>
                            <span class="badge pull-right">
                                {{ category.getProducts|length }}
                            </span>
                        </td>
                        <td>
                            <form action="{{ path('apw_blackbull_categories_updcategorystatus', {'categoryId':category.getId}) }}" method="post">
                                {% if category.getCategoriesStatus %}
                                    <input id="categoryStatus" type="checkbox" value="{{ category.getCategoriesStatus }}" name="categoryStatus" onchange="submit()" checked data-toggle="toggle" data-onstyle="success" data-size="mini" data-on="<i class='fa fa-rocket'></i>Online" data-off="<i class='fa fa-rocket fa-rotate-180'></i>Offline">
                                {% else %}
                                    <input id="categoryStatus" type="checkbox" value="1" name="categoryStatus" onchange="submit()" data-toggle="toggle" data-onstyle="success" data-size="mini" data-on="<i class='fa fa-rocket'></i>Online" data-off="<i class='fa fa-rocket fa-rotate-180'></i>Offline">
                                {% endif %}
                            </form>
                        </td>
                        <td class="col-md-2">
                            <div class="btn-group btn-group-xs">
                                <a href="{{ path('apw_blackbull_categories_movecategory',{'id': category.getId}) }}" class="btn btn-primary"><i class="fa fa-arrows fa-fw"></i> Sposta</a>
                                <a class="btn btn-primary dropdown-toggle" data-toggle="dropdown" href="#">
                                    <span class="fa fa-caret-down"></span></a>
                                <ul class="dropdown-menu">
                                    <li><a href="#"><i class="fa fa-pencil fa-fw"></i> Modifica</a></li>
                                    <li><a href="{{ path('apw_blackbull_categories_deletecategory',{'id': category.getId}) }}" onclick="return confirm('Confermi l\'eliminazione?')"><i class="fa fa-trash-o fa-fw"></i> Elimina</a></li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="//cdn.datatables.net/1.10.4/js/jquery.dataTables.min.js"></script>
    <script src="//cdn.datatables.net/plug-ins/3cfcc339e89/integration/bootstrap/3/dataTables.bootstrap.js"></script>
    <script type="text/javascript">
        $(document).ready(function(){
            $('#categoryTbl').DataTable({
                //options
            });
        });
    </script>
{% endblock %}
